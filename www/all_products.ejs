<%- include('partials/header')  %>

<% if(!error){ %>


  <div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">

    </div>



    <div class="table-responsive">
      <h3>All Products</h3> <a href="/products/web/add" class="btn btn-success">Add New Product</a><br><br>
      <table class="table table-bordered striped table-hover" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr colspan="2">
            <th></th>
            <th>Product ID</th>
            <th>Product name</th>
            <th>Product price</th>
            <th>Product quantity</th>
            <th>Product description</th>
            <th>Action</th>
          </tr>
        </thead>

        <tbody>

          <% data.forEach(function(o) { %>
            <tr>
              <td><a href="http://localhost:3010/uploadedFiles/<%= o.image %>" target="_blank" ><img src="http://localhost:3010/uploadedFiles/<%= o.image %>"  class="img-sm rounded mb-4 mb-md-0 clicker" style="width:70px;height:70px;object-fit: cover;"></a></td>
              <td><%= o.ID %></td>
              <td><%= o.name %></td>
              <td>$ <%= o.price  %></td>
              <td><%= o.quantity %></td>
              <td><b><%= o.description %></b></td>
              <td  style="text-align:center">
                <a href="/products/web/update?id=<%= o.ID%>"><span class="badge badge-success">update</span></a>
                <a href="/products/web/delete?id=<%= o.ID%>"><span class="badge badge-danger">delete</span></a>
              </td>
            </tr>
            <% }); %>

          </tbody>
        </table>
      </div>


      <br/><br/><br/>

      <script type="text/javascript">
        $(document).ready(function () {
          $('#dataTable').dataTable({
            "order": []
          } );
        });
      </script>


      <% }else{ %>
        <div class="container"><h5><%= message %></h5></div>
        <% } %>

        <%- include('partials/footer')  %>
